<GridLayout xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="1"
    android:columnCount="4"
    android:background="@color/colorSettingsBackground"
    android:layout_marginTop="1dp"
    android:rowCount="1">

    <TextView
        android:id="@+id/schedule_time"
        android:textSize="10dp"
        android:text="8:45"
        android:layout_marginRight="5dp"
        android:layout_column="0"
        android:layout_row="0"
        android:textColor="@color/colorTextLight"
        android:padding="5dp"
        />
    <TextView
        android:id="@+id/schedule_group"
        android:textSize="10dp"
        android:text="1WA"
        android:layout_column="1"
        android:layout_row="0"
        android:textColor="@color/colorTextLight"
        android:padding="5dp"
        android:width="35dp"
        android:layout_marginRight="5dp"
        />
    <TextView
        android:id="@+id/schedule_room"
        android:textSize="10dp"
        android:width="40dp"
        android:text="Aula A"
        android:textColor="@color/colorTextLight"
        android:layout_column="2"
        android:layout_row="0"
        android:padding="5dp"
        android:layout_marginRight="5dp"
        />
    <TextView
        android:id="@+id/schedule_subject"
        android:textSize="10dp"
        android:text="Nazwa przedmiotu"
        android:textColor="@color/colorTextLight"
        android:layout_column="3"
        android:layout_row="0"
        android:padding="5dp"
        android:layout_marginRight="5dp"
        />
</GridLayout>
